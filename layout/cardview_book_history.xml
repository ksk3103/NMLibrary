<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_cardview"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    android:background="@color/backgroundcolor"
    app:cardBackgroundColor="@color/backgroundcolor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/Book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#2d2d2d"
                android:singleLine="true"
            android:textSize="15sp"
            android:paddingTop="5sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_below="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By : "
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:paddingTop="5sp"/>

        <TextView
            android:id="@+id/Author_Name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/aaa"
            android:text="TextView"
            android:singleLine="true"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:paddingTop="5sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_below="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Issue Date : "
            android:textSize="15sp"
            android:textColor="#2d2d2d"
            android:paddingTop="5sp"/>

        <TextView
            android:id="@+id/IssuedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bbb"
            android:text="issuedate"
            android:textColor="#2d2d2d"
            android:textSize="15sp"
            android:paddingTop="5sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_below="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Date : "
            android:textSize="15sp"
            android:textColor="#2d2d2d"
            android:paddingTop="5sp"/>

        <TextView
            android:id="@+id/ReturnedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ccc"
            android:text="Returndate"
            android:textSize="15sp"
            android:textColor="#2d2d2d"
            android:paddingTop="5sp"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>